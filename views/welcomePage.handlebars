<div class="banner"></div>

<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            value="{{keywords}}"
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i></button>

          </div>

          <div class="btn-group">
            <button
              type="button"
              class="btn btn-danger dropdown-toggle"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Action
            </button>
            <ul class="dropdown-menu">
              <li><a
                  class="dropdown-item"
                href="{{#if keywords}}?keyword={{keywords}}&{{else}}?{{/if}}sort=name"
                >A-Z(default)</a></li>

              <li><a class="dropdown-item" 
              href="{{#if keywords}}?keyword={{keywords}}&{{else}}?{{/if}}sort=-name"
              >Z-A</a></li>

              <li><a class="dropdown-item" 
              href="{{#if keywords}}?keyword={{keywords}}&{{else}}?{{/if}}sort=-rating"
              >rating
                  hight-low</a></li>
              <li><a
                  class="dropdown-item"
                  href="{{#if keywords}}?keyword={{keywords}}&{{else}}?{{/if}}sort=location"
                >Location</a></li>

              <li><a
                  class="dropdown-item"
                  href="{{#if keywords}}?keyword={{keywords}}&{{else}}?{{/if}}sort=category"
                >category</a></li>
            </ul>
          </div>

        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">

  <div class="row">
    <div class="col-md-10 mx-auto d-flex flex-wrap justify-content-center">

      {{#each data}}
        <div class="cols card mb-3 mx-3 w-25">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <img
              class="card-img-top"
              src="{{this.image}}"
              alt="{{this.name}}"
            />
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>
                {{this.category}}
              </div>

              <span class="badge rounded-pill bg-info text-dark mt-3">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
            <div class="button-wrapper d-flex justify-content-end mx-2">
              <form action="/restaurants/{{this._id}}/delete" method="POST">

                <a
                  class="btn-sm btn-warning"
                  style="color: black; text-decoration:none"
                  href="/restaurants/{{this._id}}/new"
                >edit</a>
                <a
                  class="btn-sm btn-success"
                  style="color: white; text-decoration:none"
                  href="/restaurants/{{this._id}}"
                >detail</a>

                <button type="submit" class="btn-sm btn-danger">delete</button>
              </form>
            </div>
          </a>
        </div>

      {{/each}}

    </div>
  </div>
</div>